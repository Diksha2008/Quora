<%= raw(ans.content) %>
<%= link_to  "<i class=\"fa fa-arrow-up\" aria-hidden=\"true\"></i> #{ans.is_upvoted_string(current_user.id)}".html_safe , url_for(controller: 'upvote', action: 'toggle_upvote', ans_id: ans.id), method: :post, class: "upvote_#{ans.id} btn btn-info" , remote: true %>
<% if ans.my_ans? current_user.id %>
	<style type="text/css">
		.upvote_<%= ans.id %>{
			background-color: lightgrey;
			color: grey;
			border: 1px solid grey;
			pointer-events: none;
			display: none;
		}
	</style>
<% elsif ans.upvoted_by current_user %>
<style type="text/css">
	.upvote_<%= ans.id %>{
		background-color: lightgrey;
		color: grey;
		border: 1px solid grey;
	}
	.upvote_<%= ans.id %>:hover{
		background-color: lightgrey;
		color: inherit;
		border: 1px solid grey;
	}
	.answer .upvote_<%= ans.id %>:active{
		background-color: grey;
		color: inherit;
		border: 1px solid black;
	}
</style>
<% end %>